<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="Jerive\Bundle\WorkflowBundle\Entity\Token">
        <indexes>
            <index columns="workflow"/>
            <index columns="place"/>
            <index columns="created_date"/>
        </indexes>

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO" />
        </id>

        <field name="place" type="string" length="32" />

        <field name="workflow" type="string" length="15" />

        <field name="created_date" type="datetime" />

        <lifecycle-callbacks>
            <lifecycle-callback type="prePersist" method="prePersist"/>
        </lifecycle-callbacks>

    </mapped-superclass>
</doctrine-mapping>
